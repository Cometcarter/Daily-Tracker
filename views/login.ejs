<body>
    <div class="full-background">
        <div class="container xanh text-center login-container">
            <div class="col-sm-6 col-sm-offset-3">

                <h1>LOGIN</h1>
                <form action="/login" method="post" class="form-login">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control mt-1" name="email">
                    </div>
                    <div class="form-group">
                        <label class="mt-3">Password</label>
                        <input type="password" class="form-control mt-1" name="password">
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg btn-index mt-3">Login</button>
                </form>
                <hr>
                <p>Need an account? <a href="/signup">Signup</a></p>
                <p>Or go <a href="/">home</a>.</p>
            </div>
        </div>
    </div>
    </div>
</body>

